{
  "name": "react-idle-timer",
  "version": "4.2.12",
  "description": "Activity detection for React.js",
  "main": "dist/index.min.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && cp src/index.d.ts dist/index.d.ts",
    "watch": "rollup -c -w",
    "clean": "rimraf dist example/src/dist docs coverage",
    "lint": "standard lint",
    "fix": "standard --fix",
    "test": "npm run lint && jest",
    "docs": "./scripts/docs",
    "prepackage": "yarn clean && yarn test && yarn build && yarn docs",
    "package": "./scripts/package",
    "example": "./scripts/example"
  },
  "keywords": [
    "react",
    "idle",
    "idletimer",
    "timer",
    "activity",
    "active"
  ],
  "author": "Randy Lebeau <randylebeau@gmail.com> (https://github.com/supremetechnopriest)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/supremetechnopriest/react-idle-timer.git"
  },
  "peerDependencies": {
    "prop-types": "^15.x.x",
    "react": "^16.x.x",
    "react-dom": "^16.x.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "date-fns": "^2.12.0",
    "docco": "^0.8.0",
    "documentation": "^12.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^25.5.4",
    "prompt-list": "^3.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.6",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-uglify-es": "0.0.1",
    "simulant": "^0.2.2",
    "sinon": "^9.0.2",
    "standard": "^14.3.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/example/"
    ],
    "setupFiles": [
      "./test.setup.js"
    ],
    "collectCoverage": true
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "beforeEach",
      "describe",
      "it",
      "expect"
    ]
  }
}
